<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange">

        <TextView
            android:id="@+id/search_bth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"></TextView>

        <EditText
            android:id="@+id/search_input_box"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/search_bth"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_edit_box_bg"
            android:gravity="left|center"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:singleLine="true"></EditText>

        <ImageView
            android:id="@+id/search_clean_bth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/delete_x"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/search_bth"
            android:layout_marginRight="10dp"
            android:visibility="gone"></ImageView>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/base_contaile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>