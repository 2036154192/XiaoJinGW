<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/selected_cover"
                android:scaleType="centerCrop"
                android:src="@color/orange"></ImageView>

            <TextView
                android:id="@+id/selected_off_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领券省30元"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_tab_bg"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"></TextView>

        </RelativeLayout>

        <TextView
            android:id="@+id/selected_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="详细内容"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selected_buy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tab_bg"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="领券购买"></TextView>

            <TextView
                android:id="@+id/selected_original_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/orange"
                android:layout_marginLeft="10dp"
                android:text="原价19元"></TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>