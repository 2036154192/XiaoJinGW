<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/goods_cover"
        android:src="@color/orange"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goods_title"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="小金护肤铲平"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goods_off_prise"
            android:padding="2dp"
            android:text="@string/text_goods_off_prise"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_tab_bg"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券后价："
                android:textColor="@color/orange"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goods_after_off_prise"
                android:text="19.80"
                android:textColor="@color/orange"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goods_original_prise"
                android:layout_marginLeft="10dp"
                android:text="@string/text_goods_original_prise"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goods_sell_count"
                android:layout_marginLeft="10dp"
                android:text="100人以购买"></TextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>